{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "dotenv -e .env.test -- jest --config=jest.unit.config.js",
    "pretest:integration": "command -v docker >/dev/null 2>&1 && npm run testdb:restart || echo 'Docker not available, skipping pretest steps'",
    "test:integration": "dotenv -e .env.test -- jest -i --no-cache --config=jest.integration.config.js",
    "posttest:integration": "command -v docker >/dev/null 2>&1 && docker rm -f integration-tests-prisma integration-tests-mongo || echo 'Docker not available, skipping posttest steps'",
    "testdb:restart": "npm run testdb:restart:postgres && npm run testdb:restart:mongo",
    "testdb:restart:postgres": "docker rm -f integration-tests-prisma || true && docker build -t test-db -f Dockerfile.testdb.postgres . && docker run -d --name integration-tests-prisma -p 5433:5432 test-db && sleep 2",
    "testdb:restart:mongo": "docker rm -f integration-tests-mongo || true && docker build -t test-db-mongo -f Dockerfile.testdb.mongo . && docker run -d --name integration-tests-mongo -p 27018:27017 test-db-mongo && sleep 2",
    "preloadtest": "docker compose -f ../docker-compose.yml up -d server-loadtest",
    "loadtest:build": "dotenv -e .env.loadtest -- ts-node src/tests/load/scripts/build.ts",
    "loadtest:run": "dotenv -e .env.loadtest -- ts-node -r tsconfig-paths/register src/tests/load/runner.ts",
    "loadtest": "npm run loadtest:build && npm run loadtest:run",
    "postloadtest": "docker compose -f ../docker-compose.yml rm -sfv server-loadtest loadtest-db"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/k6": "^1.0.2",
    "@types/luxon": "^3.4.2",
    "@types/mongoose": "^5.11.97",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "esbuild": "^0.25.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "k6-html-reporter": "^1.0.5",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@supabase/supabase-js": "^2.48.1",
    "@types/axios": "^0.9.36",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.12.0",
    "axios": "^1.8.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "mongodb": "^6.14.2",
    "mongoose": "^8.12.1",
    "node-cron": "^3.0.3",
    "prisma": "^6.5.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  }
}